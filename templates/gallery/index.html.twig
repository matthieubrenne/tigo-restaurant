{% extends 'base.html.twig' %}

{% block title %}La gallerie - TIGO{% endblock %}

{% block content %}

<h1 class="card-home-title text-center">La<span> Galerie</span></h1>

    <div class="lightbox-gallery">
        <div class="container">
            
            <div class="row photos">
                {% for images in image %}
                    <div class="col-sm-6 col-md-4 col-lg-3 item"><a href="{{ vich_uploader_asset(images, 'imageFile') }}" data-lightbox="photos"><img class="img-fluid" src="{{ vich_uploader_asset(images, 'imageFile') }}"></a></div>
                {% endfor %}
            </div>
            
        </div>
    </div>

    <a href="{{ path('home') }}" class="telephone">
        <h2 class="card-title"><span>R</span>etour a l'accueil</h2>
    </a>
{% endblock %}
